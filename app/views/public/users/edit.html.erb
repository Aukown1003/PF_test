<div class="container py-5">
  <div class="row">
    <h5 class="col-4 text-center">会員情報編集</h5>
  </div>

  <div class="col-12 mt-4">
    <%= form_with model: @user, url: edit_user_path(user.id) do |f| %>
      <div class="field row mt-2">
        <p class="col-3">ニックネーム</p>
        <%= f.text_field :name, autofocus: true, placeholder: '令和', class: "mr-md-5" %>
      </div>

      <div class="field row mt-2">
        <p class="col-3">メールアドレス</p>
        <%= f.email_field :email, autocomplete: "email", placeholder: 'sample@example.com' %>
      </div>

      <div class="actions row mt-3">
        <div class="col-3"></div>
        <%= f.submit "編集内容を保存",class: "btn btn-sm btn-success px-5 mr-md-5" %>
        <div class="col-1"></div>
        <%= link_to "退会する", unsubscribe_users_path, class: "btn btn-sm btn-danger px-3" %>
      </div>
    <% end %>
  </div>
</div>